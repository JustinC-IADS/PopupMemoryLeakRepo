<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PopupMemoryLeak.MainPage">

    <VerticalStackLayout HorizontalOptions="Center" VerticalOptions="Center">
        <Button Margin="0,5" Text="Create popup, but don't open" Clicked="Button1_Clicked" />
        <Button Margin="0,5" Text="Open popup using MainPage" Clicked="Button2_Clicked" />
        <Button Margin="0,5"  Text="Open popup using New Page" Clicked="Button3_Clicked" />
        <Button Margin="0,20,0,0" Text="Force Garbage Collection" Clicked="Button4_Clicked" />
    </VerticalStackLayout>
</ContentPage>
